<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <title>@ViewData["Title"] - AuthChannel</title>
   <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
   <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   <link rel="stylesheet" href="~/AuthChannel.styles.css" asp-append-version="true" />
   <link href="~/lib/js-snackbar/dist/js-snackbar.css" rel="stylesheet" />
   <link href="~/css/graph.css" rel="stylesheet" />
   <link href="~/lib/choices.js/choices.css" rel="stylesheet" />
   <link href="~/lib/choices.js/choices.min.css" rel="stylesheet" />
   <link href="~/lib/font-awesome@6.5.2/css/all.css" rel="stylesheet" />
   <link href="~/lib/font-awesome@6.5.2/css/all.min.css" rel="stylesheet" />
   <link href="~/lib/font-awesome@6.5.2/css/fontawesome.css" rel="stylesheet" />
   <link href="~/lib/font-awesome@6.5.2/css/fontawesome.min.css" rel="stylesheet" />
   <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

   <link rel="manifest" href="/manifest.json">

   <script>
       if ('serviceWorker' in navigator) {
           navigator.serviceWorker.register('/service-worker.js')
               .then(function (registration) {
                   console.log('Service Worker registered with scope:', registration.scope);
               }).catch(function (error) {
                   console.log('Service Worker registration failed:', error);
               });
       }
   </script>

</head>

<body>

   <div  class="mx-2 px-2 flex-column flex-fill" style="height: 100vh; overflow: hidden;">
        <div id="navMain" class="d-flex justify-content-between align-items-center p-3 border-bottom">
            <!-- Dropdown Button with Logo -->
            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="~/icons/icon-192x192.png" alt="Logo" style="height: 40px;" />
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="MessageBoard" asp-action="Index">Messages</a></li>
                </ul>
            </div>

            <!-- Login Partial -->
            <div>
                <partial name="_LoginPartial" />
            </div>
        </div>
       <main role="main">
           @RenderBody()
       </main>
       
   </div>

   <script src="~/lib/jquery/dist/jquery.min.js"></script>
   <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
   <script src="~/lib/popper.js@2.11.8/umd/popper.min.js"></script>
   <script src="~/js/site.js" asp-append-version="true"></script>
   <script src="~/lib/js-snackbar/dist/js-snackbar.js"></script>
   <script src="~/lib/choices.js/choices.js"></script>
   <script src="~/lib/choices.js/choices.min.js"></script>
   <script src="~/lib/sweetalert@2.1.2/sweetalert.min.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/@@fluentui/web-components@2.6.1/dist/web-components.min.js"></script>
   @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
