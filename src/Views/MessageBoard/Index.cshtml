@{
    ViewData["Title"] = "Message Board";
}

@{


    string? UserName = string.Empty;
    var sid = User.Identities.FirstOrDefault() as System.Security.Claims.ClaimsIdentity;
    UserName = sid is not null ? sid.Name : null;


